<form action="/<%= @video.id %>" method="POST">
	<div>
		<label>Title</label>
		<input type="text" name="title" placeholder="Enter a title for the video" value="<%= @video.title %>">
	</div>	

	<div>
 		<label>Description</label>
 		<textarea name="description"><%= @video.description %></textarea>
  </div>

  	<div>
		<label>URL</label>
		<input type="text" name="url" placeholder="Enter the URL for the video" value="<%= @video.url %>">
	</div>	

	<div>
    <input type="submit" value="Save Video">
	</div>

	<% if(@video.id) %>
		<input type="hidden" name="_method" value="PUT">
	<% end %>
</form>